@model MedicalPark.Models.Appointment

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(90deg, #1a2a3b, #112233); /* الألوان القديمة */
        color: #fff;
        margin: 0;
        padding: 20px;
    }

    h1 {
        color: #00b0ff; /* اللون الأزرق القديم */
        text-align: center;
        margin-bottom: 30px;
    }

    .details-container {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        padding: 30px;
        max-width: 700px;
        margin: auto;
        backdrop-filter: blur(10px);
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
    }

    .details-item {
        margin-bottom: 18px;
        font-size: 17px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        padding-bottom: 10px;
    }

        .details-item strong {
            display: inline-block;
            width: 160px;
            color: #00b0ff;
        }

    .btn {
        display: inline-block;
        margin-top: 20px;
        background-color: #007bff; 
        color: #fff;
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #0056b3; 
        }
</style>

<div class="details-container">
    <h1>Appointment Details</h1>
    <div class="details-item">
        <strong>ID:</strong> @Model.Id
    </div>
    <div class="details-item">
        <strong>Doctor:</strong> @Model.DoctorName
    </div>
    <div class="details-item">
        <strong>Patient:</strong> @Model.PatientName
    </div>
    <div class="details-item">
        <strong>Rendezvous Date:</strong> @Model.Rendezvous.ToString("yyyy-MM-dd HH:mm")
    </div>
    <div class="details-item">
        <strong>Sickness:</strong> @Model.Sickness
    </div>
    <div class="details-item">
        <strong>Created Date:</strong> @Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")
    </div>
    <div class="details-item">
        <strong>Closed Date:</strong> @(Model.ClosedDate.HasValue ? Model.ClosedDate.Value.ToString("yyyy-MM-dd HH:mm") : "Not Closed")
    </div>
       @if (User.IsInRole("Admin"))
        {
    <a asp-action="Index" class="btn">Back to List</a>
        }
    @if (User.IsInRole("Patient"))
    {
        <a asp-action="PatientIndex" class="btn">Back to List</a>
    }
</div>
