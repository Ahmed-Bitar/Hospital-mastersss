@model MedicalPark.Models.Appointment


<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(90deg, #1a2a3b, #112233);
        color: #fff;
        margin: 0;
        padding: 20px;
    }

    h1 {
        color: #00b0ff;
        text-align: center;
        margin-bottom: 30px;
    }

    .form-container {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 30px;
        max-width: 600px;
        margin: 0 auto;
        backdrop-filter: blur(10px);
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.3);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: 500;
        color: #00b0ff;
        display: block;
        margin-bottom: 8px;
    }

    input, select, textarea {
        width: 100%;
        padding: 12px;
        margin-top: 8px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #2c3e50;
        color: #fff;
    }

        input:focus, select:focus, textarea:focus {
            border-color: #00b0ff;
            outline: none;
        }

    .btn-primary {
        padding: 12px 24px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }
</style>


<div class="form-container">
    <h1>Create Appointment</h1>
    <form asp-action="CreatePatient" method="post">
        <div class="form-group">
            <label for="DoctorId">Doctor</label>
            <select asp-for="DoctorId" asp-items="ViewBag.Doctors"></select>
        </div>
      
        <div class="form-group">
            <label for="Rendezvous">Rendezvous Date</label>
            <input asp-for="Rendezvous" type="datetime-local" />
        </div>
        <div class="form-group">
            <label for="Sickness">Sickness</label>
            <textarea asp-for="Sickness"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>

    </form>
</div>
