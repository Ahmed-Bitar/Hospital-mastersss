@model MedicalPark.Models.Appointment

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(90deg, #1a2a3b, #112233);
        color: #fff;
    }

    h1 {
        color: #dc3545;
        text-align: center;
    }

    .delete-container {
        background: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 60%;
        margin: 0 auto;
        text-align: center;
    }

    .btn {
        padding: 10px 20px;
        font-size: 14px;
        font-weight: 500;
        margin: 10px;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        background-color: #dc3545;
    }

        .btn:hover {
            background-color: #c82333;
        }

    .btn-cancel {
        background-color: #6c757d;
    }

        .btn-cancel:hover {
            background-color: #5a6268;
        }
</style>

<div class="delete-container">
    <h1>Delete Appointment</h1>
    <p>Are you sure you want to delete this appointment?</p>
    <p><strong>@Model.DoctorName</strong> with <strong>@Model.PatientName</strong> on <strong>@Model.Rendezvous.ToString("yyyy-MM-dd HH:mm")</strong></p>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn">Delete</button>
        <a asp-action="Index" class="btn btn-cancel">Cancel</a>
        <a href="@Url.Action("Index", "Appointment")" class="btn btn-create" style="background-color: #005b8f; margin-left:10px;">Back</a>

    </form>
</div>
