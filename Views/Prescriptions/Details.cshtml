@model MedicalPark.Models.Prescription

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(90deg, #1a2a3b, #112233);
        color: #ffffff;
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        color: #00b0ff;
        margin-top: 30px;
        margin-bottom: 20px;
    }

    .details-container {
        background: #fff;
        color: #000;
        width: 60%;
        margin: auto;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.2);
    }

    .detail-item {
        margin-bottom: 15px;
        font-size: 18px;
    }

        .detail-item strong {
            color: #005b8f;
        }

    .btn {
        font-size: 16px;
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 8px;
        transition: 0.3s ease;
        text-decoration: none;
        color: white;
        display: inline-block;
        margin-top: 20px;
    }

    .btn-back {
        background-color: #005b8f;
    }

        .btn-back:hover {
            background-color: #003f5f;
            transform: scale(1.05);
        }
</style>

<h2>Prescription Details</h2>

<div class="details-container">
    <div class="detail-item">
        <strong>Patient Name:</strong> @Model.PatientName
    </div>
    <div class="detail-item">
        <strong>Doctor Name:</strong> @Model.DoctorName
    </div>
    <div class="detail-item">
        <strong>Sickness:</strong> @Model.Sickness
    </div>
    <div class="detail-item">
        <strong>Medicals Name:</strong> @Model.MedicalsName
    </div>

    <a asp-action="Index" class="btn btn-back">Back to List</a>
</div>
