@model MedicalPark.Models.Prescription

@{
    ViewData["Title"] = "Delete Prescription";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(90deg, #1a2a3b, #112233);
        color: #ffffff;
        margin: 0;
        padding: 0;
    }

    h2, h3 {
        text-align: center;
        color: #00b0ff;
        margin-top: 30px;
    }

    .delete-container {
        background-color: #ffffff;
        color: #000000;
        width: 60%;
        margin: 30px auto;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0,0,0,0.3);
    }

    .row {
        margin-bottom: 15px;
        font-size: 18px;
    }

    dt {
        font-weight: 600;
        color: #005b8f;
    }

    .btn {
        font-size: 16px;
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-decoration: none;
        color: white;
        display: inline-block;
        margin-right: 10px;
    }

    .btn-delete {
        background-color: #dc3545;
    }

        .btn-delete:hover {
            background-color: #c82333;
            transform: scale(1.05);
        }

    .btn-cancel {
        background-color: #6c757d;
    }

        .btn-cancel:hover {
            background-color: #5a6268;
            transform: scale(1.05);
        }

    .btn-group {
        text-align: center;
        margin-top: 20px;
    }
</style>

<h2>@ViewData["Title"]</h2>

<div class="delete-container">
    <h3>Are you sure you want to delete this prescription?</h3>

    <dl class="row">
        <dt class="col-sm-4">Patient Name</dt>
        <dd class="col-sm-8">@Model.PatientName</dd>

        <dt class="col-sm-4">Doctor Name</dt>
        <dd class="col-sm-8">@Model.DoctorName</dd>

        <dt class="col-sm-4">Sickness</dt>
        <dd class="col-sm-8">@Model.Sickness</dd>

        <dt class="col-sm-4">Medicals Name</dt>
        <dd class="col-sm-8">@Model.MedicalsName</dd>
    </dl>

    <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
        <div class="btn-group">
            <button type="submit" class="btn btn-delete">Delete</button>
            <a href="@Url.Action("Index")" class="btn btn-cancel">Cancel</a>
        </div>
    </form>
</div>
