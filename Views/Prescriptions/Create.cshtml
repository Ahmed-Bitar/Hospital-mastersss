@model MedicalPark.Models.Prescription

@{
    ViewData["Title"] = "Create Prescription";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(90deg, #1a2a3b, #112233);
        color: #ffffff;
        margin: 0;
        padding: 0;
    }

    h2 {
        color: #00b0ff;
        text-align: center;
        margin-top: 30px;
        margin-bottom: 20px;
    }

    .form-container {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 30px;
        max-width: 600px;
        margin: 0 auto;
        backdrop-filter: blur(10px);
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.3);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: 500;
        color: #00b0ff;
        display: block;
        margin-bottom: 8px;
    }

    select, textarea {
        width: 100%;
        padding: 12px;
        border-radius: 10px;
        border: 1px solid #ddd;
        background-color: #2c3e50;
        color: #ffffff;
    }

        select:focus, textarea:focus {
            border-color: #00b0ff;
            outline: none;
        }

    .form-actions {
        margin-top: 30px;
        text-align: center;
    }

    .btn-success {
        padding: 12px 24px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        transition: 0.3s;
        margin-right: 10px;
    }

        .btn-success:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

    .btn-secondary {
        padding: 12px 24px;
        background-color: #6c757d;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: scale(1.05);
        }
</style>
<a href="@Url.Action("DoctorIndex", "Prescriptions")" class="btn btn-create" style="background-color: #005b8f; margin-left:10px;">Back</a>

<div class="form-container">
    <h2>Create Prescription</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="AppointmentID">Select Appointment</label>
            <select id="AppointmentID" name="AppointmentID">
                @foreach (var appointment in ViewBag.Appointments as IEnumerable<Appointment>)
                {
                    <option value="@appointment.Id">@appointment.Patient.Name - @appointment.Doctor.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="MedicalsName">Sickness Description</label>
            <textarea id="MedicalsName" name="MedicalsName" rows="4" placeholder="Enter sickness description..."></textarea>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-success">Create Prescription</button>
            <a href="@Url.Action("DoctorIndex", "Prescriptions")" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
