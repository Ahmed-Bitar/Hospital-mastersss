@model IEnumerable<MedicalPark.Models.Prescription>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(90deg, #1a2a3b, #112233);
        color: #ffffff;
        margin: 0;
        padding: 0;
    }

    h1 {
        color: #00b0ff;
        text-align: center;
        margin: 40px 0 20px;
    }

    .container {
        max-width: 95%;
        margin: auto;
        padding-bottom: 40px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

    th, td {
        padding: 15px;
        text-align: left;
    }

    th {
        background-color: #005b8f;
        color: white;
        font-weight: 500;
    }

    tr:nth-child(even) {
        background-color: rgba(255, 255, 255, 0.03);
    }

    tr:hover {
        background-color: #003f5f;
    }

    .btn {
        font-size: 14px;
        font-weight: 500;
        padding: 8px 14px;
        border-radius: 8px;
        transition: 0.3s ease;
        text-decoration: none;
        color: white;
        display: inline-block;
        margin: 2px;
    }

    .btn-create {
        background-color: #005b8f;
    }

        .btn-create:hover {
            background-color: #003f5f;
            transform: scale(1.05);
        }

    .btn-edit {
        background-color: #17a2b8;
    }

        .btn-edit:hover {
            background-color: #138496;
        }

    .btn-details {
        background-color: #6c757d;
    }

        .btn-details:hover {
            background-color: #5a6268;
        }

    .btn-delete {
        background-color: #dc3545;
        border: none;
        padding: 8px 14px;
        border-radius: 8px;
        font-weight: 500;
        color: white;
        cursor: pointer;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }

    .text-right {
        text-align: right;
        margin-bottom: 10px;
    }

    form {
        display: inline;
    }
</style>

<div class="container">
    <h1>Prescriptions</h1>

    @if (User.IsInRole("Doctor"))
    {
        <div class="text-right">
            <a asp-action="Create" class="btn btn-create">+ Create Prescription</a>
        </div>
    }

    <a href="@Url.Action("Index", "Home")" class="btn btn-create">Back</a>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Doctor</th>
                <th>Patient</th>
                <th>Sickness</th>
                <th>Medical Name</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prescription in Model)
            {
                <tr>
                    <td>@prescription.Id</td>
                    <td>@prescription.DoctorName</td>
                    <td>@prescription.PatientName</td>
                    <td>@prescription.Sickness</td>
                    <td>@prescription.MedicalsName</td>
                    <td>@prescription.CreatedDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (User.IsInRole("Doctor"))
                        {
                            <a asp-action="Edit" asp-route-id="@prescription.Id" class="btn btn-edit">Edit</a>
                            <a asp-action="Details" asp-route-id="@prescription.Id" class="btn btn-details">Details</a>
                            <form asp-action="DeleteConfirmed" asp-route-id="@prescription.Id" method="post" class="btn btn-DeleteConfirmed">
                                <button type="submit" class="btn-delete">Delete</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
