@{
    ViewData["Title"] = "Verify Code - Nurse";
}
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(90deg, #1a2a3b, #112233);
        color: #ffffff;
        margin: 0;
        padding: 0;
    }

    h1 {
        color: #00b0ff;
        text-align: center;
        margin-bottom: 20px;
    }

    .lead {
        color: #81c7e0;
        text-align: center;
        margin-bottom: 30px;
    }

    .btn {
        font-size: 18px;
        font-weight: 600;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        width: 100%;
        box-sizing: border-box;
        transition: all 0.3s ease;
        text-decoration: none;
        display: block;
    }

    .btn-green {
        background-color: #28a745;
        color: #ffffff;
    }

        .btn-green:hover {
            background-color: #218838;
            color: #ffffff;
            transform: scale(1.05);
        }

    .option-box {
        background: linear-gradient(90deg, #005b8f, #1a2a3b);
        border-radius: 15px;
        padding: 20px;
        color: #ffffff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

        .option-box:hover {
            background: linear-gradient(90deg, #003f5f, #112233);
            transform: scale(1.05);
        }

        .option-box i {
            font-size: 40px;
            margin-bottom: 15px;
            padding: 15px;
            border: 2px solid #00b0ff;
            border-radius: 50%;
            background-color: #ffffff;
            color: #00b0ff;
        }
</style>

<div class="container">
    <h1>Verify Nurse's Code</h1>
    <p class="text-center lead">Enter the verification codes sent to the nurse and manager's emails</p>

    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <form id="verifyForm" method="post">
                <div class="option-box">
                    <div class="form-group">
                        <label>Nurse Code</label>
                        <input type="text" id="nurseCodeInput" class="form-control" name="nurseCode" required />
                    </div>
                    <div class="form-group mt-3">
                        <label>Manager Code</label>
                        <input type="text" id="managerCodeInput" class="form-control" name="managerCode" required />
                    </div>
                    <button type="submit" id="verifyButton" class="btn btn-green mt-3">
                        <i class="fas fa-check"></i> Verify Codes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#verifyButton').click(function (e) {
                e.preventDefault();
                var nurseCode = $('#nurseCodeInput').val();
                var managerCode = $('#managerCodeInput').val();

                $.ajax({
                    url: '@Url.Action("VerifyNurseCodes", "ManegmentNurse")',
                    type: 'POST',
                    data: {
                        nurseCode: nurseCode,
                        managerCode: managerCode
                    },
                    success: function (response) {
                        if (response.success) {
                            window.location.href = response.redirectUrl;
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('An error occurred while verifying the codes.');
                    }
                });
            });
        });
    </script>
}
