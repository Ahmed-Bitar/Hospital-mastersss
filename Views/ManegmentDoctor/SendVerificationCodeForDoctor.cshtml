@{
    ViewData["Title"] = "Send Verification Code - Doctor";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(90deg, #1a2a3b, #112233);
        color: #ffffff;
        margin: 0;
        padding: 0;
    }

    h1 {
        color: #00b0ff;
        text-align: center;
        margin-bottom: 20px;
    }

    .lead {
        color: #81c7e0;
        text-align: center;
        margin-bottom: 30px;
    }

    .btn {
        font-size: 18px;
        font-weight: 600;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        width: 100%;
        box-sizing: border-box;
        transition: all 0.3s ease;
        text-decoration: none;
        display: block;
    }

    .btn-primary {
        background-color: #005b8f;
        color: #ffffff;
    }

        .btn-primary:hover {
            background-color: #003f5f;
            color: #ffffff;
            transform: scale(1.05);
        }

    .btn-green {
        background-color: #28a745;
        color: #ffffff;
    }

        .btn-green:hover {
            background-color: #218838;
            color: #ffffff;
            transform: scale(1.05);
        }

    .option-box {
        background: linear-gradient(90deg, #005b8f, #1a2a3b);
        border-radius: 15px;
        padding: 20px;
        color: #ffffff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

        .option-box:hover {
            background: linear-gradient(90deg, #003f5f, #112233);
            transform: scale(1.05);
        }

        .option-box i {
            font-size: 40px;
            margin-bottom: 15px;
            padding: 15px;
            border: 2px solid #00b0ff;
            border-radius: 50%;
            background-color: #ffffff;
            color: #00b0ff;
        }

        .option-box h4 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .option-box p {
            font-size: 1rem;
            color: #c4e1f5;
        }
</style>
<div class="container">
    <h1>Send Verification Code</h1>
    <p class="text-center lead">Enter the doctor's email to send a verification code</p>

    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <form asp-action="SendVerificationCodeDoctor" method="post">
                <div class="option-box">
                    <div class="form-group">
                        <label>Email Address</label>
                        <input type="email" class="form-control" name="email" required />
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">
                        <i class="fas fa-paper-plane"></i> Send Code
                    </button>
                </div>
                <p id="timer" class="text-center lead"></p>

            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
                $(document).ready(function () {
            var canSendCode = true;
            var countdownTimer;

            $('form').submit(function (e) {
                e.preventDefault();

                if (!canSendCode) {
                    return;
                }

                var email = $('input[name="email"]').val();
                var $submitButton = $('button[type="submit"]');

                $submitButton.prop('disabled', true);
                $submitButton.html('<i class="fas fa-spinner fa-spin"></i> Sending...');

                $.ajax({
                    url: '@Url.Action("SendVerificationCodeForDoctor", "ManegmentDoctor")',
                    type: 'POST',
                    data: { email: email },
                    success: function (response) {
                        if (response.success) {
                            window.location.href = response.redirectUrl;
                        } else {
                            alert(response.message);
                            startCountdown($submitButton);
                        }
                    },
                    error: function () {
                        alert('An error occurred while sending the verification code.');
                        startCountdown($submitButton);
                    }
                });
            });

            function startCountdown($button) {
                canSendCode = false;
                var timeLeft = 90;
                $button.prop('disabled', true);

                updateButtonText(timeLeft);

                countdownTimer = setInterval(function () {
                    timeLeft--;
                    updateButtonText(timeLeft);

                    if (timeLeft <= 0) {
                        clearInterval(countdownTimer);
                        canSendCode = true;
                        $button.prop('disabled', false);
                        $button.html('<i class="fas fa-paper-plane"></i> Send Code');
                    }
                }, 1000);
            }

            function updateButtonText(time) {
                $('button[type="submit"]').html('<i class="fas fa-clock"></i> Wait ' + time + 's');
            }
        });


    </script>
}