@model MedicalPark.Models.SurgicalOperation

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Delete Surgical Operation</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #001f3f, #005f99);
            color: white;
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 500px;
            margin: 50px auto;
            padding: 25px 30px;
            background: rgba(255,255,255,0.05);
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0,0,0,0.3);
            text-align: center;
        }

        h1 {
            margin-bottom: 25px;
        }

        .details {
            margin-bottom: 20px;
        }

        .btn {
            padding: 12px 25px;
            margin: 0 10px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            border: none;
            transition: background 0.3s ease;
        }

        .btn-confirm {
            background: #ff4c4c;
            color: white;
        }

            .btn-confirm:hover {
                background: #cc0000;
            }

        .btn-cancel {
            background: #00bfff;
            color: white;
        }

            .btn-cancel:hover {
                background: #008fc7;
            }

        .field {
            margin-bottom: 10px;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1><i class="fa-solid fa-trash"></i> Confirm Delete</h1>
        <div class="details">
            <p class="field">Are you sure you want to delete this surgical operation?</p>
            <p><strong>@Model.Name</strong> scheduled on <strong>@Model.SurgeryDate.ToString("yyyy-MM-dd")</strong></p>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            <button type="submit" class="btn btn-confirm"><i class="fa-solid fa-check"></i> Delete</button>
            <a href="@Url.Action("IndexAdmin")" class="btn btn-cancel"><i class="fa-solid fa-ban"></i> Cancel</a>
        }
    </div>
</body>
</html>
