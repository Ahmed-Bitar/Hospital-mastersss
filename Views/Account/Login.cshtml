@model MedicalPark.Models.LoginModel


@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(90deg, #1a2a3b, #112233);
        color: #ffffff;
        padding: 0;
        margin: 0;
    }

    h1, h3 {
        color: #00b0ff;
        text-align: center;
    }

    .form-container {
        background-color: #1e2d3b;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        padding: 30px;
        width: 50%;
        margin: 50px auto;
        color: #ffffff;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
            color: #00b0ff;
        }

    .form-control {
        padding: 10px;
        font-size: 14px;
        border-radius: 6px;
        border: 1px solid #555;
        background-color: #2a3b4c;
        color: #ffffff;
        width: 100%;
        box-sizing: border-box;
    }

        .form-control:focus {
            border-color: #00b0ff;
            outline: none;
            background-color: #334455;
        }

    .btn-blue {
        background-color: #005c99;
        color: white;
        font-size: 16px;
        font-weight: 500;
        padding: 15px;
        width: 100%;
        border-radius: 6px;
        transition: background-color 0.3s ease, transform 0.3s ease;
        border: none;
    }

        .btn-blue:hover {
            background-color: #004080;
            transform: scale(1.05);
        }

    i {
        border: 2px solid #00b0ff;
        border-radius: 50%;
        padding: 10px;
        background-color: #ffffff;
        color: #00b0ff;
        font-size: 30px;
        display: block;
        text-align: center;
        margin: 0 auto 20px;
    }

    .lead {
        color: #81c7e0;
        text-align: center;
        margin-bottom: 30px;
    }

    .form-container h3 {
        font-size: 24px;
        color: #00b0ff;
        text-align: center;
    }

    .form-container a {
        color: #00b0ff;
        text-align: center;
        display: block;
        margin-top: 20px;
        text-decoration: none;
    }

        .form-container a:hover {
            text-decoration: underline;
        }
</style>

<div class="form-container">
    <i class="fas fa-user-circle"></i>
    <h3>Welcome Back!</h3>
    <p class="lead">Please log in to access your account.</p>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Email">Email Address</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-blue">Login</button>
    </form>
    <div class="mt-3">
        <a href="@Url.Action("Register", "Account")">Don't have an account? Register here</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
