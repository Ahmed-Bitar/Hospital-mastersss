@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(90deg, #1a2a3b, #112233);
        color: #ffffff;
        margin: 0;
        padding: 0;
    }

    h1 {
        color: #00b0ff;
        text-align: center;
        margin-bottom: 20px;
    }

    .lead {
        color: #81c7e0;
        text-align: center;
        margin-bottom: 30px;
    }

    .option-box {
        background: linear-gradient(90deg, #005b8f, #1a2a3b);
        border-radius: 15px;
        padding: 20px;
        color: #ffffff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
        text-decoration: none;
        display: block;
    }

        .option-box:hover {
            background: linear-gradient(90deg, #003f5f, #112233);
            transform: scale(1.05);
            text-decoration: none;
        }

        .option-box i {
            font-size: 40px;
            margin-bottom: 15px;
            padding: 15px;
            border: 2px solid #00b0ff;
            border-radius: 50%;
            background-color: #ffffff;
            color: #00b0ff;
        }

        .option-box h5 {
            font-size: 1.5rem;
            margin-bottom: 10px;
            color: #ffffff;
        }

        .option-box p {
            font-size: 1rem;
            color: #c4e1f5;
            margin: 0;
        }
</style>

<div class="container mt-5">
    <div class="text-center">
        <h1>Welcome to MedicalPark</h1>
        <p class="lead">Please login or sign up to access your account.</p>
    </div>

    <div class="row text-center mt-4">
        <div class="col-md-6 mb-4">
            <a href="@Url.Action("Login", "Account")" class="option-box">
                <i class="fas fa-sign-in-alt"></i>
                <h5>Login</h5>
                <p>Enter your existing account</p>
            </a>
        </div>
        <div class="col-md-6 mb-4">
            <a href="@Url.Action("SendVerificationCode", "Account")" class="option-box">
                <i class="fas fa-user-plus"></i>
                <h5>Sign Up</h5>
                <p>Create a new account</p>
            </a>
        </div>
    </div>
</div>
