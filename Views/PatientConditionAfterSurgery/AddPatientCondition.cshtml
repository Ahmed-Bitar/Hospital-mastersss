@model MedicalPark.Models.PatientConditionAfterSurgery

@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Patient Condition";
}

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');
    body {
        font-family: 'Poppins', sans-serif;
        background: #0e1a2b;
        color: #e0e6f0;
        padding: 20px;
    }

    .container {
        max-width: 500px;
        margin: auto;
        background: #122740;
        border-radius: 8px;
        padding: 25px;
        box-shadow: 0 0 15px rgba(30, 60, 120, 0.7);
    }

    h2 {
        color: #56a0d3;
        margin-bottom: 25px;
        text-align: center;
    }

    label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
    }

    select, textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 6px;
        border: none;
        background: #1a2a4d;
        color: #cde4ff;
        font-size: 1rem;
        resize: vertical;
    }

    textarea {
        min-height: 100px;
    }

    .validation-error {
        color: #f44336;
        font-size: 0.9rem;
        margin-top: -15px;
        margin-bottom: 15px;
    }

    .btn-primary {
        background: #3b7ddd;
        color: white;
        border: none;
        padding: 12px 20px;
        border-radius: 5px;
        font-weight: 700;
        width: 100%;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background: #2a5fb8;
        }
</style>

<div class="container">
    <h2><i class="fa fa-notes-medical"></i> Add Patient Condition</h2>

    <form asp-action="AddPatientCondition" method="post">
        <input type="hidden" asp-for="PatientId" />
        <input type="hidden" name="operationId" value="@ViewBag.OperationId" />

        <label asp-for="Status"></label>
        <select asp-for="Status" asp-items="ViewBag.StatusList">
            <option value="">-- Select Status --</option>
        </select>
        <span asp-validation-for="Status" class="validation-error"></span>

        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" placeholder="Optional notes..."></textarea>
        <span asp-validation-for="Notes" class="validation-error"></span>

        <button type="submit" class="btn-primary">Save</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
