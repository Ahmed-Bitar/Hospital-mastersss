@model MedicalPark.Models.SurgicalOperation

@{
    Layout = "_Layout";  // لو عندك ملف Layout استخدمه، أو ازله لو ما عندك
    ViewData["Title"] = "Surgical Operation Details";
}

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');
    body {
        font-family: 'Poppins', sans-serif;
        background: #0e1a2b;
        color: #e0e6f0;
        padding: 20px;
    }

    .container {
        max-width: 900px;
        margin: auto;
        background: #122740;
        border-radius: 8px;
        padding: 25px;
        box-shadow: 0 0 15px rgba(30, 60, 120, 0.7);
    }

    h2 {
        color: #56a0d3;
        margin-bottom: 15px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 25px;
    }

    th, td {
        padding: 12px 10px;
        border-bottom: 1px solid #254060;
        text-align: left;
    }

    th {
        background: #1a2a4d;
        color: #aad4ff;
    }

    .btn-primary {
        background: #3b7ddd;
        color: white;
        border: none;
        padding: 10px 18px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 600;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background: #2a5fb8;
        }

    .alert-error {
        background-color: #b64a4a;
        color: #fff;
        padding: 10px 15px;
        margin-bottom: 20px;
        border-radius: 5px;
    }
</style>

<div class="container">
    <h2><i class="fa fa-procedures"></i> Operation Details: @Model.Name</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert-error">@TempData["Error"]</div>
    }

    <table>
        <tr>
            <th>Patient</th>
            <td>@Model.PatientName</td>
        </tr>
        <tr>
            <th>Doctor</th>
            <td>@Model.DoctorName</td>
        </tr>
        <tr>
            <th>Nurse</th>
            <td>@Model.NurseName</td>
        </tr>
        <tr>
            <th>Room</th>
            <td>@Model.RoomName</td>
        </tr>
        <tr>
            <th>Start Time</th>
            <td>@Model.OperationStartTime.ToString("yyyy-MM-dd HH:mm")</td>
        </tr>
        <tr>
            <th>Duration (minutes)</th>
            <td>@Model.DurationInMinutes</td>
        </tr>
        <tr>
            <th>Cost</th>
            <td>@Model.CostOfOperation $</td>
        </tr>
        <tr>
            <th>Discharged</th>
            <td>@(Model.IsPatientDischarged ? "Yes" : "No")</td>
        </tr>
    </table>

    <h3>Patient Conditions After Surgery</h3>

    @if (Model.PatientConditions == null || !Model.PatientConditions.Any())
    {
        <p>No condition records found.</p>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Notes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var condition in Model.PatientConditions.OrderByDescending(c => c.Date))
                {
                    <tr>
                        <td>@condition.Date.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@condition.Status.ToString()</td>
                        <td>@condition.Notes</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a asp-action="AddPatientCondition" asp-route-operationId="@Model.Id" class="btn-primary">
        <i class="fa fa-plus-circle"></i> Add Patient Condition
    </a>
</div>
