@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(90deg, #1a2a3b, #112233);
        color: #ffffff;
        margin: 0;
        padding: 0;
    }

    h1 {
        color: #00b0ff;
        text-align: center;
        margin-bottom: 20px;
    }

    .lead {
        color: #81c7e0;
        text-align: center;
        margin-bottom: 30px;
    }

    .btn {
        font-size: 18px;
        font-weight: 600;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        width: 100%;
        box-sizing: border-box;
        transition: all 0.3s ease;
        text-decoration: none;
        display: block;
    }

    .btn-primary {
        background-color: #005b8f;
        color: #ffffff;
    }

        .btn-primary:hover {
            background-color: #003f5f;
            color: #ffffff;
            transform: scale(1.05);
        }

    .btn-green {
        background-color: #28a745;
        color: #ffffff;
    }

        .btn-green:hover {
            background-color: #218838;
            color: #ffffff;
            transform: scale(1.05);
        }

    .option-box {
        background: linear-gradient(90deg, #005b8f, #1a2a3b); 
        border-radius: 15px;
        padding: 20px;
        color: #ffffff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); 
        transition: all 0.3s ease;
    }

        .option-box:hover {
            background: linear-gradient(90deg, #003f5f, #112233); 
            transform: scale(1.05); 
        }

        .option-box i {
            font-size: 40px;
            margin-bottom: 15px;
            padding: 15px;
            border: 2px solid #00b0ff;
            border-radius: 50%;
            background-color: #ffffff;
            color: #00b0ff;
        }

        .option-box h4 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .option-box p {
            font-size: 1rem;
            color: #c4e1f5; 
        }
</style>

<div class="container">
    <h1>Register New Account</h1>
    <p class="text-center lead">Choose the type of user you want to create</p>

    <div class="row text-center mt-5">
        <div class="col-md-6 mb-4">
            <a href="@Url.Action("SendVerificationCodeForDoctor", "ManegmentDoctor")" class="btn-link">
                <div class="option-box">
                    <i class="fas fa-user-md"></i>
                    <h4>Create Doctor Account</h4>
                    <p>Register a new doctor profile</p>
                </div>
            </a>
        </div>

        <div class="col-md-6 mb-4">

            <a href="@Url.Action("SendVerificationCodeNurse", "ManegmentNurse")" class="btn-link">
                <div class="option-box">
                    <i class="fas fa-user-nurse"></i>
                    <h4>Create Nurse Account</h4>
                    <p>Register a new nurse profile</p>
                </div>
            </a>
        </div>
        <div class="col-md-6 mb-4">

            <a href="@Url.Action("SendVerificationCodeForAdmin", "ManegmentAdmin")" class="btn-link">
                <div class="option-box">
                    <i class="fas fa-user-nurse"></i>
                    <h4>Create Admin Account</h4>
                    <p>Register a new Admin profile</p>
                </div>
            </a>
        </div>
    </div>
</div>