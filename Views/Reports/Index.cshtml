@model IEnumerable<MedicalPark.Models.Report>


<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(90deg, #1a2a3b, #112233);
        color: #ffffff;
    }

    h1 {
        color: #00b0ff;
        text-align: center;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #005b8f;
        color: white;
    }

    tr:hover {
        background-color: #003f5f;
    }

    .btn {
        font-size: 16px;
        font-weight: 600;
        padding: 12px 20px;
        border-radius: 10px;
        transition: all 0.3s ease;
        text-decoration: none;
        color: white;
        display: inline-block;
        box-sizing: border-box;
        background-color: transparent;
    }

        .btn:hover {
            background-color: #005b8f;
            color: white;
            transform: scale(1.05);
        }

    .btn-create {
        background-color: #005b8f;
    }

        .btn-create:hover {
            background-color: #003f5f;
            transform: scale(1.05);
        }

    .text-right {
        text-align: right;
    }
</style>
<div class="container mt-5">
    <h1 class="text-center">Reports</h1>
    <div class="text-right mb-3">
        <a href="@Url.Action("Create")" class="btn btn-primary">+ Create New Report</a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-create" style="background-color: #005b8f; margin-left:10px;">Back</a>

    </div>
    <table>
        <thead>
            <tr>
                <th>Report Type</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr>
                    <td>@Enum.GetName(typeof(Report.ReportType), report.ReportTypes)</td>
                    <td>@report.CreatedDate</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = report.Id })" class="btn btn-edit">Edit</a>
                        <a href="@Url.Action("Details", new { id = report.Id })" class="btn btn-details">Details</a>
                        <a href="@Url.Action("Delete", new { id = report.Id })" class="btn btn-delete">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
