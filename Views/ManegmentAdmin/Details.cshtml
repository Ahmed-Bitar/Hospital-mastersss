@model MedicalPark.Models.Admin

@{
    ViewData["Title"] = "Admin Details";
}
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(90deg, #0f172a, #1e293b); 
        color: #d1d5db; 
    }

    h1 {
        color: #00b0ff;
        text-align: center;
        margin-bottom: 20px;
    }

    .card {
        background-color: #1e293b; 
        color: #d1d5db; 
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5); 
    }

    .card-header {
        background-color: #2d3e50; 
        color: #ffffff;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .card-body {
        padding: 20px;
    }

    dl dt {
        font-weight: bold;
    }

    dl dd {
        margin-bottom: 15px;
    }

    .btn {
        font-size: 16px;
        font-weight: 600;
        padding: 12px 20px;
        border-radius: 10px;
        transition: all 0.3s ease;
        text-decoration: none;
        color: #d1d5db;
        display: inline-block;
        box-sizing: border-box;
        background-color: transparent;
        border: 1px solid #d1d5db;
    }

        .btn:hover {
            background-color: #2d3e50;
            color: #ffffff;
            transform: scale(1.05);
        }

    .btn-warning {
        background-color: #ff7f50; 
        border-color: #ff7f50;
    }

        .btn-warning:hover {
            background-color: #e68900;
            border-color: #e68900;
        }

    .btn-secondary {
        background-color: #4b5563; 
        border-color: #4b5563;
    }

        .btn-secondary:hover {
            background-color: #2d3e50;
            border-color: #2d3e50;
        }

    .text-center {
        text-align: center;
    }
</style>

<div class="container mt-5">
    <h1>Management Details</h1>

    <div class="card">
        <div class="card-body row">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Full Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Gender</dt>
                <dd class="col-sm-9">@Model.Gender</dd>

                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9">@Model.Department</dd>

                <dt class="col-sm-3">Management Type</dt>
                <dd class="col-sm-9">@Model.Type</dd>
            </dl>

            <div class="text-center mt-4">
                <a asp-controller="ManegmentAdmin" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                <a asp-controller="UserManegment" asp-action="Index" class="btn btn-secondary">Back to List</a>

            </div>
        </div>
    </div>
</div>