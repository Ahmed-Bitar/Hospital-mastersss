@model MedicalPark.Models.Admin

@{
    ViewData["Title"] = "Edit Admin";
}

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background: linear-gradient(90deg, #1a2a3b, #112233);
        color: #ffffff;
        margin: 0;
        padding: 40px;
    }

    h1 {
        text-align: center;
        color: #00b0ff;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: 500;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
        margin-top: 5px;
    }

    .btn-primary {
        background-color: #005b8f;
        color: white;
        font-weight: 600;
        border: none;
        padding: 12px 20px;
        border-radius: 10px;
        transition: all 0.3s ease;
        margin-top: 20px;
    }

    .btn-primary:hover {
        background-color: #003f5f;
        transform: scale(1.05);
    }

    .container {
        max-width: 700px;
        margin: auto;
        background-color: #1f2d3a;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
    }
</style>

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Edit Admin Information</h2>

    <form asp-action="EditAdmin" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="Name" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label for="PhoneNumber" class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" required />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Gender">Gender</label>
                <select class="form-control" id="Gender" name="Gender" required>
                    <option value="true">Female</option>
                    <option value="false">Male</option>
                </select>
            </div>

            <div class="form-group">
                <label for="Type">Type</label>
                <select class="form-control" id="Type" name="Type" required>
                    @foreach (var type in ViewBag.ManegmentTypes as IEnumerable<ManegmentType>)
                    {
                        <option value="@type">@type</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="Department">Department</label>
                <select class="form-control" id="Department" name="Department" required>
                    @foreach (var dept in ViewBag.Departments as IEnumerable<Department>)
                    {
                        <option value="@dept">@dept</option>
                    }
                </select>
            </div>

        <button type="submit" class="btn btn-success mt-3">Save Changes</button>
        <a href="@Url.Action("Index", "Management")" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
