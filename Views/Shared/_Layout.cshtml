<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MedicalPark</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(90deg, #1a2a3b, #112233);
            color: #ffffff;
            padding: 0;
            margin: 0;
        }

        .header__userNav {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 999;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .header__userNavAvatar {
            height: 40px;
            width: 40px;
            border-radius: 50%;
            background-size: cover;
            background-position: center;
            border: 2px solid #005b8f;
            cursor: pointer;
        }

        .dropdown-menu {
            position: absolute;
            top: 50px;
            right: 0;
            background-color: #1a2a3b;
            border-radius: 5px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            width: 200px;
            display: none;
            opacity: 0;
            padding: 10px 0;
            z-index: 1000;
            transition: opacity 0.3s ease;
        }

            .dropdown-menu a,
            .dropdown-menu button {
                color: #ffffff;
                font-weight: 500;
                padding: 10px 20px;
                display: block;
                text-align: left;
                transition: all 0.3s ease;
                border: none;
                background: none;
                width: 100%;
                text-decoration: none;
            }

                .dropdown-menu a:hover,
                .dropdown-menu button:hover {
                    background-color: #003f5f;
                }

            .dropdown-menu.show {
                display: block;
                opacity: 1;
            }

        .header__userNav:hover .dropdown-menu {
            display: block;
        }

        .container {
            margin-top: 80px; /* لإضافة مسافة من الأعلى بسبب الشريط الثابت */
        }

        .btn-return-home {
            background-color: #005b8f;
            color: white;
            border-radius: 5px;
            padding: 10px 20px;
            text-decoration: none;
            font-weight: 600;
            margin-bottom: 20px;
            display: inline-block;
        }

            .btn-return-home:hover {
                background-color: #003f5f;
                color: white;
            }

        .profile-content {
            background-color: #1a2a3b;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }

        .footer {
            background-color: #112233;
            color: #ffffff;
            padding: 20px 0;
        }

            .footer h5 {
                color: #ffffff;
                font-weight: bold;
            }

        .footer-links a {
            color: #ffffff;
            text-decoration: none;
        }

            .footer-links a:hover {
                text-decoration: underline;
            }

        .social-links a {
            color: #ffffff;
            margin-right: 10px;
        }

            .social-links a:hover {
                color: #005b8f;
            }
    </style>
</head>

<body>
    <header>
     
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
   
    <!-- End Footer -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
