@model MedicalPark.Models.MedicalRecord

<h2>Details for @Model.PationName</h2>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(90deg, #1a2a3b, #112233);
        color: #ffffff;
    }

    h1 {
        color: #00b0ff;
        text-align: center;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #005b8f;
        color: white;
    }

    tr:hover {
        background-color: #003f5f;
    }

    .btn {
        font-size: 16px;
        font-weight: 600;
        padding: 12px 20px;
        border-radius: 10px;
        transition: all 0.3s ease;
        text-decoration: none;
        color: white;
        display: inline-block;
        box-sizing: border-box;
        width: auto;
    }

    .btn-create {
        background-color: #005b8f;
    }

        .btn-create:hover {
            background-color: #003f5f;
            transform: scale(1.05);
        }

    .btn-edit {
        background-color: #28a745;
    }

        .btn-edit:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

    .btn-delete {
        background-color: #dc3545;
    }

        .btn-delete:hover {
            background-color: #c82333;
            transform: scale(1.05);
        }

    .btn-details {
        background-color: #007bff;
    }

        .btn-details:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .text-right {
        text-align: right;
    }
</style>
<div>

    <h4>Medical Record</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Patient Name</dt>
        <dd class="col-sm-10">@Model.PationName</dd>

        <dt class="col-sm-2">Doctor Names</dt>
        <dd class="col-sm-10">
            @foreach (var doctor in ViewBag.Doctors)
            {
                @doctor <br />
            }
        </dd>

        <dt class="col-sm-2">Medicals</dt>
        <dd class="col-sm-10">
            @foreach (var medicine in ViewBag.Medicines)
            {
                @medicine <br />
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
